doctype html 
html(lang = "en")
  head 
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=enge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    link(rel="stylesheet", href="../public/js/index.css")
    title Noom
  body 
    header
      h1 Noom
    main 
      div#welcome
        form
          input(placeholder="room name", required, type="text")
          button Enter room
      div#call
        div#myStream
          div#myVideo
            h2 My Video
            video#myFace(autoplay,playsinline, width="100%", height="400")
            div#btn-wrapper
              button#mute Mute
              button#camera Turn Camera Off
            select#cameras
          div
            h2 Other's Video
            video#peerFace(autoplay,playsinline, width="100%", height="400")
          

    //- 브라우저에 socketIO설치 
    script(src="/socket.io/socket.io.js")  
    script(src="/public/js/app.js")